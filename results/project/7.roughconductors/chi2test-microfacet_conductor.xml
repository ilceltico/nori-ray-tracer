<?xml version="1.0" encoding="utf-8"?>

<test type="chi2test">
	<integer name="resolution" value="15"/>

	<!-- Test a few different configurations of the microfacet model -->
	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.1"/>
		<float name="intIOR" value="1.5"/>
		<float name="intK" value="0.5"/>
	</bsdf>

	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.3"/>
		<float name="intIOR" value="1.5"/>
		<float name="intK" value="1.5"/>
	</bsdf>

	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.6"/>
		<float name="intIOR" value="3.8"/>
		<float name="intK" value="0.5"/>
	</bsdf>

	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.6"/>
		<float name="intIOR" value="2.5"/>
		<float name="intK" value="1.5"/>
	</bsdf>

	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.05"/>
		<float name="intIOR" value="1.3"/>
		<float name="intK" value="0.5"/>
	</bsdf>

	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.3"/>
		<float name="intIOR" value="2.5"/>
		<float name="intK" value="1.5"/>
	</bsdf>

	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.6"/>
		<float name="intIOR" value="3.8"/>
		<float name="intK" value="0.5"/>
	</bsdf>

	<!-- Defaults to Copper -->
	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.1"/>
	</bsdf>
	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.3"/>
	</bsdf>
	<bsdf type="microfacet_conductor">
		<float name="alpha" value="0.6"/>
	</bsdf>

</test>
